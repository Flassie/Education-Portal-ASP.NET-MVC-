@model IEnumerable<Image>

<div id="gallery" class="section">
    <div class="container">
        <div class="row">
            <div id="gallery-carousel" class="carousel slide col-sm-12" data-ride="carousel" >
                <ul class="carousel-indicators">
                    @if(Model.Count() != 0)
                    {
                        <li data-target="#gallery-carousel" data-slide-to="0" class="active"></li>
                        for(var i = 1; i < Model.Count(); i++)
                        {
                            <li data-target="#gallery-carousel" data-slide-to="@i"></li>
                        }
                    }
                </ul>

                <div class="carousel-inner">
                    @if(Model.Count() != 0)
                    {
                        <div class="carousel-item active">
                            <img src="~/Content/images/gallery/@Model.ElementAt(0).FileName" />
                        </div>

                        for (var i = 1; i < Model.Count(); i++)
                        {
                            <div class="carousel-item">
                                <img src="~/Content/images/gallery/@Model.ElementAt(i).FileName" />
                            </div>
                        }
                    }
                </div>

                @if(Model.Count() > 1)
                {
                    <a class="carousel-control-prev control" href="#gallery-carousel" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next control" href="#gallery-carousel" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
