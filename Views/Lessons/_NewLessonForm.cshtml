@model LessonViewModel


@using (Ajax.BeginForm("add", null, new AjaxOptions {
    HttpMethod = "POST",
    OnSuccess = "location.reload(true)"
}, new { @class = "col-sm-12 form-inline", id="form-new-lesson" }))
{
    <div class="form-group">
        @Html.DropDownListFor(m => m.Course, (IEnumerable<SelectListItem>)ViewBag.CoursesDropDownItems, new { @class = "col-sm-12 form-control course" })
    </div>
    <div class="form-group ml-sm-2">
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
    </div>
    <div class="form-group ml-sm-2" style="flex: 1">
        @Html.EditorFor(m => m.VideoLink, new { htmlAttributes = new { @class = "form-control w-100", placeholder = "YouTube link" } })
    </div>
    <div class="form-group ml-sm-2">
        <button type="submit" class="btn btn-success">Add</button>
    </div>
}
